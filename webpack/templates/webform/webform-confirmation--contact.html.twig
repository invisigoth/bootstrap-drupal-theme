{#
/**
 * @file
 * Default theme implementation to webform confirmation.
 *
 * Available variables:
 * - progress: Progress bar.
 * - message: Confirmation message.
 * - back_url: URL to the previous webform submission.
 *
 * @see template_preprocess_webform_confirmation()
 *
 * @ingroup themeable
 */
#}
{{ attach_library('webform/webform.confirmation') }}

{% if progress %}
	{{ progress }}
{% endif %}

<div{{attributes.addClass('webform-confirmation')}}>

	{% if message %}

		<h2 class="text-center text-primary mb-0">Submission confirmation for<br>'{{ webform.label() }}'</h2>

		<div class="my-5 text-center text-primary">
			<i class="fa-4x fa-check-circle fal"></i>
		</div>


		<h3 class="text-pink text-center mb-5">Thank you for your submission.
			<br/>
			Your unique submission ID is
			{{ webform_submission.uuid.value }}
		</h3>

		<div class="d-flex justify-content-center">
			<div class="webform-confirmation__message col-md-10 col-lg-7 col-xl-6">{{ message }}</div>
		</div>
	{% endif %}

	{% if back %}
		<div class="webform-confirmation__back mb-0 mt-5 text-center">
			<a href="{{ back_url }}" rel="prev" {{ back_attributes }}>{{ back_label }}</a>
		</div>
	{% endif %}

</div>
